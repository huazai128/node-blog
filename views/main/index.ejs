<%- include ../common/header %>

<section>
    <div class="blog_wrapper blog_wrap_indeximg">
        <div class="clearfix container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
                    <h1 class="header_title"><%= title %></h1>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="back_top">
    <a href="#top"></a>
</div>

<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1" id="index_content">
                <% if(articles.length <= 0){ %>
                    <h2 style="padding-bottom: 15px;" class="text-center">目前还没有文章，赶紧添加去！！！</h2>
                <% } %>
                <% articles.forEach(function(article,index){ %>
                    <div class="post-preview">
                        <a href="/article/<%= article._id %>">
                            <h1 class="post-title">
                                <%= article.title %>
                            </h1>
                            <div class="post-content-preview">
                                <%- article.text %>
                            </div>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <a href="/author/<%= article.author._id %>"><%= article.author.name %></a>
                            on
                            日期：
                            <%= moment(article.meta.updateTime).format("MM/DD/YYYY") %>
                            <span><%= article.pv %></span>
                        </p>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    <% if(len > (page + 1) * articles.length) { %>
    	<button class="btn btn-default btn-lg btn-block" id="index_showmore" type="button">加载更多...</button>
    <% } %>


</article>

<!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
<script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
<!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
<script src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<% include ../common/footer %>